<component version="2">

  <ignoreFiles list="CVS;SCCS;RCS;rcs;.DS_Store;.svn;.pyc;.pyo"/>

  <filetypes>
    <filetype name = "IDL" description = "IDL files"
      extensions="idl"
      default_extension="idl"
      binary="false"
      icon = "AllIcons.FileTypes.Idl">

      <highlighting>
        <options>
          <option name="LINE_COMMENT" value="//" />
          <option name="COMMENT_START" value="/*" />
          <option name="COMMENT_END" value="*/" />
          <option name="HEX_PREFIX" value="0x" />
          <option name="NUM_POSTFIXES" value="ldf" />
        </options>
        <keywords keywords="FALSE;Object;TRUE;any;attribute;boolean;case;char;const;context;default;define;double;endif;enum;exception;fixed;float;ifdef;ifndef;in;inout;interface;long;module;octet;oneway;out;raises;readonly;sequence;short;string;struct;switch;typedef;union;unsigned;void;wchar;wstring" ignore_case="false" />
      </highlighting>
    </filetype>

    <filetype binary="false" default_extension="pl" extensions="pl;pm" description="Perl files" name="Perl" icon="AllIcons.FileTypes.Custom">
      <highlighting>
        <options>
          <option name="LINE_COMMENT" value="#" />
          <option name="HEX_PREFIX" value="0x" />
          <option name="HAS_BRACES" value="true" />
          <option name="HAS_BRACKETS" value="true" />
          <option name="HAS_PARENS" value="true" />
          <option name="HAS_STRING_ESCAPES" value="true" />
        </options>
        <keywords keywords="and;bless;caller;continue;die;do;dump;else;elsif;eq;eval;exit;for;foreach;goto;if;import;last;local;my;ne;next;no;or;our;package;qw;redo;ref;require;return;sub;tie;tied;unless;untie;until;use;wantarray;while" ignore_case="false" />
        <keywords2 keywords="chmod;chomp;close;exists;grep;join;keys;length;open;print;push;seek;shift;split;truncate;warn" />
      </highlighting>
    </filetype>
  </filetypes>
</component>
