<project name="plugins">
  <property name="out.dir" value="out-ant"/>
  <property name="lib.dir" value="out-ant/dist/lib"/>
  <property name="plugins.dir" value="out-ant/dist/plugins"/>
  <property name="tmp.dir" value="out-ant/tmp"/>

  <target name="build-core">
    <mkdir dir="${tmp.dir}/plugins/core"/>
    <mkdir dir="${plugins.dir}/core/lib"/>

    <copydir dest="${tmp.dir}/plugins/core" src="plugins/core/src"/>

    <jar destfile="${plugins.dir}/core/lib/core.jar" basedir="${tmp.dir}/plugins/core"/>
  </target>
</project>